rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // PDF files in pdfs/ folder
    match /pdfs/{allPaths=**} {
      // Only authenticated ebhcs.org users can upload
      allow write: if request.auth != null
        && request.auth.token.email.matches('.*@ebhcs\\.org')
        && request.resource.size < 10 * 1024 * 1024  // 10MB limit
        && request.resource.contentType == 'application/pdf';
      
      // Anyone can read PDFs (for student viewing)
      allow read: if true;
    }
    
    // Images in images/ folder (if you add image storage later)
    match /images/{allPaths=**} {
      // Only authenticated ebhcs.org users can upload
      allow write: if request.auth != null
        && request.auth.token.email.matches('.*@ebhcs\\.org')
        && request.resource.size < 5 * 1024 * 1024   // 5MB limit
        && request.resource.contentType.matches('image/.*');
      
      // Anyone can read images
      allow read: if true;
    }
    
    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
